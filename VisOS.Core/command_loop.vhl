#include "const_data.vhl"
#include "command_list.vhl"

public void CommandLoop()
{
	var in_test[255];
	var count;
	var exitLoop = 0;
	while(!exitLoop)
	{
		WriteTerminalPrefix();
		count = ReadCommand(ptr_of(in_test), size_of(in_test));

		var isExit = IsExit(ptr_of(in_test));
		if(isExit)
		{
			//exitLoop = 1;
			return;
		}

		InvokeCommand(ptr_of(in_test));

		ClearCommand(ptr_of(in_test), size_of(in_test));
	}
	return;
}