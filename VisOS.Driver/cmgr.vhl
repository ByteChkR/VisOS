private const var CMGR_InterfacePresentPin = 0xFFFF1006;
private const var CMGR_WidthAddr = 0xFFFF1007;
private const var CMGR_HeightAddr = 0xFFFF1008;

private const var CMGR_CursorLeftAddr = 0xFFFF1009;
private const var CMGR_CursorTopAddr = 0xFFFF100A;

private const var CMGR_BackColorAddr = 0xFFFF100B;
private const var CMGR_ForeColorAddr = 0xFFFF100C;
private const var CMGR_ResetColorAddr = 0xFFFF100D;


public void CMGR_ResetConsoleColor()
{
	if(!CMGR_InterfacePresentPin)
	{
		return;
	}
	CMGR_ResetColorAddr = 1;
	return;
}

public void CMGR_SetBackColor(var color)
{
	if(!CMGR_InterfacePresentPin)
	{
		return;
	}
	CMGR_BackColorAddr = color;
	return;
}

public void CMGR_SetForeColor(var color)
{
	if(!CMGR_InterfacePresentPin)
	{
		return;
	}
	CMGR_ForeColorAddr = color;
	return;
}

public void CMGR_SetConsoleColor(var fore, var back)
{
	CMGR_SetForeColor(fore);
	CMGR_SetBackColor(back);
	return;
}

public void CMGR_SetCursorLeft(var left)
{
	if(!CMGR_InterfacePresentPin)
	{
		return;
	}
	CMGR_CursorLeftAddr = left;
	return;
}

public void CMGR_SetCursorTop(var top)
{
	if(!CMGR_InterfacePresentPin)
	{
		return;
