	CMGR_CursorTopAddr = top;
	return;
}

public void CMGR_SetCursorPosition(var left, var top)
{
	CMGR_SetCursorLeft(left);
	CMGR_SetCursorTop(top);
}

public void CMGR_SetConsoleWidth(var width)
{
	if(!CMGR_InterfacePresentPin)
	{
		return;
	}
	CMGR_WidthAddr = width;
	return;
}

public void CMGR_SetConsoleHeight(var height)
{
	if(!CMGR_InterfacePresentPin)
	{
		return;
	}
	CMGR_HeightAddr = height;
	return;
}

public void CMGR_SetConsoleSize(var width, var height)
{
	CMGR_SetConsoleWidth(width);
	CMGR_SetConsoleHeight(height);
	return;
}

public var CMGR_GetBackColor()
{
	if(!CMGR_InterfacePresentPin)
	{
		return 0;
	}
	return CMGR_BackColorAddr;
}

public var CMGR_GetForeColor()
{
	if(!CMGR_InterfacePresentPin)
	{
		return 0;
	}
	return CMGR_ForeColorAddr;
}

