{
  "DefaultTarget": "Debug",
  "BuildTargets": {
    "Debug": {
      "TargetName": "Debug",
      "DependsOn": [],
      "Jobs": [
        {
          "JobName": "Create New Version",
          "BuildJobRunner": "combined",
          "Arguments": {
            "newVersion": "%VISDIR%common/jobs/newVersion.json"
          }
        },
        {
          "JobName": "Build %NAME%@%VERSION%",
          "BuildJobRunner": "build",
          "Arguments": {
            "build:input": "%PROJDIR%Loader.vhl",
            "build:steps": "HL-expr bin",
            "build:clean": "false",
            "assembler:offset.global": "0",
            "compiler:optimize-temp-vars": "true",
            "compiler:optimize-const-expr": "true",
            "linker:export": "true"
          }
        }
      ]
    },
    "Run": {
      "TargetName": "Run",
      "DependsOn": [
        "Debug"
      ],
      "Jobs": [
        {
          "JobName": "Run BootLoader",
          "BuildJobRunner": "run",
          "Arguments": {
            "run:input": "%PROJDIR%Loader.vbin",
            "run:working-dir": "%PROJDIR%"
          }
        }
      ]
    }
  },
  "ProjectName": "BootLoader",
  "ProjectVersion": "0.1.0.70",
  "Dependencies": [
    {
      "ProjectName": "VisOS.Driver",
      "ProjectVersion": "ANY"
    }
  ]
}