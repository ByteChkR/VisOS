private static string test_sub_vv= "SUB_VV_Simple_Test";
private static string test_sub_vc= "SUB_VC_Simple_Test";

private static string test_generic_math_fail= "Calculation Failed.";

private void SUB_VV_Simple_Test()
{
	BeginTest(ptr_of(test_sub_vv), size_of(test_sub_vv));
	var a = 2;
	var b = 1;
	var c = a - b;
	if(c == 1)
	{
		PassTest();
		return;
	}
	FailTest(ptr_of(test_generic_math_fail), size_of(test_generic_math_fail));
	return;
}

